/dts-v1/;
/include/ "smartinstr-mb.dtsi"
/include/ "sama5d3dm.dtsi"

/ {
	model = "Filmetrics Smart Instrument Board";
	compatible = "atmel,sama5d34ek", "atmel,sama5ek", "atmel,sama5d3", "atmel,sama5";

	chosen {
		bootargs = "console=ttyS0,115200 mtdparts=atmel_nand:8M(bootstrap/uboot/kernel)ro,-(rootfs) rw rootfstype=ubifs ubi.mtd=1 root=ubi0:rootfs";
	};

	ahb {
		apb {
			spi1: spi@f8008000 {
				status = "okay";
			};

			ssc0: ssc@f0008000 {
				status = "okay";
			};

			can0: can@f000c000 {
				status = "okay";
			};

			i2c0: i2c@f0014000 {
				status = "disabled";
			};

			i2c1: i2c@f0018000 {
				status = "disabled";
			};

			i2c2: i2c@f801c000 {
				status = "okay";

				24c64@51 {
					compatible = "24c64";
					reg = <0x51>;
					pagesize = <32>;
				};

				ds1682@6b {
					compatible = "dallas,ds1682";
					reg = <0x6b>;
				};
			};

			macb0: ethernet@f0028000 {
				status = "okay";
			};
		};
	};

	leds {
		d3 {
			label = "d3";
			gpios = <&pioE 24 0>;
		};
	};
};
